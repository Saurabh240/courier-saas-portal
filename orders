-- public.orders definition

-- Drop table

-- DROP TABLE public.orders;

CREATE TABLE public.orders (
	id bigserial NOT NULL,
	assigned_partner_email varchar(255) NULL,
	created_at timestamp(6) NULL,
	customer_email varchar(255) NULL,
	delivery_address varchar(255) NULL,
	delivery_proof_path varchar(255) NULL,
	pickup_address varchar(255) NULL,
	receiver_name varchar(255) NULL,
	sender_name varchar(255) NULL,
	status varchar(255) NULL,
	declared_value float8 NULL,
	delivery_phone varchar(255) NULL,
	delivery_type varchar(255) NULL,
	is_fragile bool NULL,
	package_height_cm float8 NULL,
	package_length_cm float8 NULL,
	package_type varchar(255) NULL,
	package_weight_kg float8 NULL,
	package_width_cm float8 NULL,
	payment_mode varchar(255) NULL,
	pickup_date varchar(255) NULL,
	pickup_phone varchar(255) NULL,
	pickup_time_window varchar(255) NULL,
	special_instructions varchar(255) NULL,
	invoice_status varchar(255) NULL,
	CONSTRAINT orders_invoice_status_check CHECK (((invoice_status)::text = ANY ((ARRAY['PENDING'::character varying, 'COMPLETED'::character varying, 'FAILED'::character varying])::text[]))),
	CONSTRAINT orders_pkey PRIMARY KEY (id),
	CONSTRAINT orders_status_check CHECK (((status)::text = ANY (ARRAY[('PENDING'::character varying)::text, ('PICKED_UP'::character varying)::text, ('IN_TRANSIT'::character varying)::text, ('DELIVERED'::character varying)::text, ('CANCELLED'::character varying)::text])))
);
